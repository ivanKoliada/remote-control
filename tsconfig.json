{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "rootDir": "./src",
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
